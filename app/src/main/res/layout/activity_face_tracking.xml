<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myproject.facedetection.ui.FaceTrackingActivity">

    <SurfaceView
        android:id="@+id/java_surface_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.myproject.facedetection.entity.CustomImageButton
        android:id="@+id/imbt_bitmap"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:background="@color/colorBlack"
        android:gravity="center_horizontal|center_vertical"
        android:text="准备检测..."
        android:textColor="@color/colorWhite"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/changeText"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="changeClick"
        android:text="切换"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
